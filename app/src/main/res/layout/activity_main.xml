<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/lucky_strike_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_luck_button"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/current_strike_text"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/lucky_strike_button"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/strike_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lucky_strike_button" />

    <TextView
        android:id="@+id/attempts_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>